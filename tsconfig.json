{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es5", "es6", "dom"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "noImplicitAny": false,
      "typeRoots": ["./types/react-native-camera-kit","./node_modules/@types"],
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"],
        "@components/*": ["src/components/*"],
        "@lib/*": ["src/lib/*"],
        "@navigation/*": ["src/navigation/*"],
        "@pages/*": ["src/pages/*"],
        "@redux/*": ["src/redux/*"],
        "@styles/*": ["src/styles/*"],
        "@types/*": ["src/types/*"]
      },
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js",
      "types",
    ]
}